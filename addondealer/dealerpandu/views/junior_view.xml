<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- res.partner tree view -->
    <record id="res_partner_junior_view_tree" model="ir.ui.view">
        <field name="name">Data Junior Employee</field>
        <field name="model">res.partner</field>
        <field name="mode">extension</field>
        <field name="inherit_id" ref="base.view_partner_tree"/>
        <field name="arch" type="xml">
                <xpath expr="//field[@name='email']" position="after">
                    <field name="plat_mobil"/>   
                    <field name="employee_junior"/>
                    <field name="employee_senior"/>
                </xpath> 
        </field>
    </record>

    <!-- res.partner form view -->
    <record id="model_name_view_form" model="ir.ui.view">
        <field name="name">Form Junior Employee</field>
        <field name="model">res.partner</field>
        <field name="mode">extension</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='vat']" position="after">
                <field name="plat_mobil"/>   
                <field name="employee_junior"/>
                <field name="employee_senior"/>
            </xpath> 
            <xpath expr="//field[@name='vat']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
        </field>
    </record>

    <record id="res_partner_junior_inherit_search" model="ir.ui.view">
        <field name="name">res.partner.inherit.view.search</field>
        <field name="model">res.partner</field>
        <field name="mode">extension</field>
        <field name="inherit_id" ref="base.view_res_partner_filter"/>
        <field name="arch" type="xml">
            <field name="parent_id" position='after'>
                <filter name="junior" string="Junior" domain="[('employee_junior', '=', 'True')]"/>
            </field>
        </field>
    </record>

    <!-- res.partner action window -->
    <record id="res_partner_junior_action" model="ir.actions.act_window">
        <field name="name">Data Junior Employee</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">res.partner</field>
        <field name="view_mode">tree,form,kanban</field>
        <field name="context">
            {
                'search_default_junior':1,
                'default_employee_junior':True
            }
        </field>
    </record>

    <!-- This Menu Item must have a parent and an action -->
    <menuitem id="dealerpandu_junior_menu_act" 
              name="Junior" 
              parent="karyawan_menu_categ" 
              action="res_partner_junior_action" 
              sequence="10"/>

</odoo>
