<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- dealerpandu.karyawan tree view -->
    <record id="dealerpandu_karyawan_view_tree" model="ir.ui.view">
        <field name="name">Daftar Karyawan</field>
        <field name="model">dealerpandu.karyawan</field>
        <field name="mode">primary</field>
        <field name="inherit_id" ref='dealerpandu_person_view_tree'/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='plat_mobil']" position="after">
                <field name="employee_junior"/>
            </xpath>
            <xpath expr="//field[@name='plat_mobil']" position="after">
                <field name="employee_senior"/>
            </xpath>
        </field>
    </record>

    <!-- dealerpandu.karyawan form view -->
    <record id="dealerpandu_karyawan_view_form" model="ir.ui.view">
        <field name="name">dealerpandu.karyawan.view.form</field>
        <field name="model">dealerpandu.karyawan</field>
        <field name="mode">primary</field>
        <field name="inherit_id" ref="dealerpandu_person_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//form//sheet//group[2]" position="after">
                <group name="status" string="Status">
                    <field name="employee_junior"/>
                    <field name="employee_senior"/>
                </group>
            </xpath>
            
        </field>
    </record>

    <!-- nambahin searchnya eror terus -->

    <!-- dealerpandu.karyawan action window -->
    <record id="dealerpandu_karyawan_action" model="ir.actions.act_window">
        <field name="name">Karyawan</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">dealerpandu.karyawan</field>
        <field name="view_mode">tree,form</field>
        <field name="context">
            {
                'search_default_junior':1,
                'default_employee_junior':True
            }
        </field>
    </record>

    <!-- This Menu Item must have a parent and an action -->
    <menuitem id="dealerpandu_karyawan_menu_act" 
              name="Karyawan" 
              parent="dealerpandu_menu_root" 
              action="dealerpandu_karyawan_action" 
              sequence="30"/>

</odoo>
