<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- res.partner form view -->
    <record id="res_partner_senior_view_form" model="ir.ui.view">
        <field name="name">res.partner.view.form</field>
        <field name="model">res.partner</field>
        <field name="mode">extension</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='vat']" position="after">
                <field name="plat_mobil"/>   
                <field name="employee_junior"/>
                <field name="employee_senior"/>
            </xpath> 
            <xpath expr="//field[@name='vat']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
        </field>
    </record>

    <record id="res_partner_senior_inherit_search" model="ir.ui.view">
        <field name="name">res.partner.inherit.view.search</field>
        <field name="model">res.partner</field>
        <field name="mode">extension</field>
        <field name="inherit_id" ref="base.view_res_partner_filter"/>
        <field name="arch" type="xml">
            <field name="parent_id" position='after'>
                <filter name="senior" string="Senior" domain="[('employee_senior', '=', 'True')]"/>
            </field>
        </field>
    </record>

    <!-- res.partner action window -->
    <record id="res_partner_senior_action" model="ir.actions.act_window">
        <field name="name">Data Senior Employee</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">res.partner</field>
        <field name="view_mode">tree,form,kanban</field>
        <field name="context">
            {
                'search_default_senior':1,
                'default_employee_senior':True
            }
        </field>
    </record>

    <!-- This Menu Item must have a parent and an action -->
    <menuitem id="dealerpandu_senior_menu_act" 
              name="Senior" 
              parent="karyawan_menu_categ" 
              action="res_partner_senior_action" 
              sequence="20"/>

</odoo>
