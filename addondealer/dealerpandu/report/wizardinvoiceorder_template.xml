<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <template id="wizard_invoice_order_pdf_template" name="template_name">
        
        <t t-call="web.html_container" >
            
            <t t-call="web.internal_layout">
               <div class='page'>

                     <h2><b>Faktur Penjualan Internal</b></h2>
                        <div class="row">
                            <div class="col-4">name </div>
                            <div class="col-8">
                                <t t-esc="form['konsumen_id'][1]"/>
                            </div>
                        </div>
                        <table class="table table-bordered">
                            <thead>
                                <tr>
                                    <th>
                                        <span>Nota Pembelian</span>
                                    </th>
                                    <th>
                                        <span>Tanggal Pembelian</span>
                                    </th>
                                    <th>
                                        <span>Total Pembelian</span>
                                    </th>
                                </tr>
                            </thead>
                            <t t-foreach="penjualan" t-as="line">
                                <tr>
                                    <td>
                                        <span t-esc="line['nama_pembeli']"/>
                                    </td>
                                    <td>
                                        <span t-esc="line['tgl_order']"/>
                                    </td>
                                    <td>
                                        <span t-esc="line['total_bayar']"/>
                                    </td>
                                </tr>
                            </t>
                        </table>
               </div> 
            </t>
        </t>    
    </template>


</odoo>
